@model IEnumerable<VeterinariaPrueba2.Models.RegistroAnimales>

@{
    <link rel="stylesheet" href="~/Content/Site.css" />
    ViewBag.Title = "Registro de mascotas";
}

<h1><img src="~/Content/img/animal.png" /> Registro de mascotas</h1>
<br />
<p class="btn btn-success">
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<br />
<br />
<br />
<table class="table table-striped" style="background-color:#8C8C8C">
    <tr>
        <th>
            Nombre del dueño
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClaseAnimal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCita)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tblRegistroDueño.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaseAnimal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCita)
            </td>
            <td>
                <div class="btn btn-warning">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </div>
                <div class="btn btn-warning">
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </div>
                <div class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>

            </td>
        </tr>
    }

</table>
